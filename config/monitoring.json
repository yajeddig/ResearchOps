{
  "monitoring": {
    "sources": [
      {
        "name": "arXiv",
        "url": "https://arxiv.org/",
        "type": "academic",
        "enabled": true,
        "check_frequency": "daily"
      },
      {
        "name": "GitHub Trending",
        "url": "https://github.com/trending",
        "type": "code",
        "enabled": true,
        "check_frequency": "daily"
      },
      {
        "name": "Hacker News",
        "url": "https://news.ycombinator.com/",
        "type": "community",
        "enabled": true,
        "check_frequency": "daily"
      }
    ],
    "thresholds": {
      "min_relevance_score": 0.7,
      "max_content_age_days": 7,
      "min_engagement_score": 5
    },
    "notifications": {
      "enabled": true,
      "channels": ["email", "slack"],
      "alert_on_high_relevance": true
    },
    "reporting": {
      "daily_summary": true,
      "weekly_digest": true,
      "monthly_report": true,
      "output_format": "markdown"
    }
  }
}
